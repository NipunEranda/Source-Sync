<div id="app">
    <div class="container">
        <div class="row" style="margin-top: 50px;">
            {{#each organizations}}
            <div class="col-md-4" style="margin-bottom: 20px;">
                <div class="card bg-light mb-3 center" style="max-width: 18rem;border:none;border-radius: 100%;">
                    <div class="card-body">
                        <img src="{{this.avatar_url}}" alt="" width="100%" style="border-radius: 100%;">
                    </div>
                    <div class="overlay" id="{{this.id}}-viewBtn" onmouseover="viewButtonOnOver({{this.id}})"
                        onmouseleave="viewButtonOnLeave({{this.id}})" style="border-radius: 100%;" onclick="location.href='/repositories?org={{this.login}}'">
                        <div class="text">
                            <label for="">{{this.login}}</label>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        console.log({{{ organizations_json }}});
    });
    function viewButtonOnOver(element) {
        $(`#${element}-viewBtn`).css('opacity', 1);
    }
    function viewButtonOnLeave(element) {
        $(`#${element}-viewBtn`).css('opacity', 0);
    }
</script>

<style>
    .card-title {
        color: black !important;
    }

    .overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: .5s ease;
        background-color: rgba(0, 0, 0, 0.8);
        cursor: pointer;
    }

    .container .overlay {
        opacity: 0;
    }

    .text {
        color: white;
        font-size: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align: center;
        width: fit-content;
        vertical-align: text-top;
    }
</style>