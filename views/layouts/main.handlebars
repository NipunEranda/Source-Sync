            timestamp.innerHTML = t.toLocaleDateString("en-US", options);
        });
    </script> --}}
</body>

</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background-color: #1d1d1d;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        color: white;
    }

    #navIcon {
        height: 35px;
        padding: 0;
        margin: 0;
    }

    .nav-link {
        padding: 0.5rem;
        font-weight: 600;
        font-size: 14px;
    }

    .bg-dark {
        background-color: rgb(22, 22, 22) !important;
    }

    .dropdown-menu {
        min-width: 0;
        font-size: 14px;
        background-color: rgb(44, 44, 44);
    }

    .dropdown-menu .dropdown-item:hover {
        background-color: white;
        color: black;
        transition: 0.5s;
    }

    .dropdown-menu .dropdown-item {
        color: white;
    }

    .nav-link:hover {
        transition: 0.5s;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .hide{
        display: none !important;
    }

    .show{
        display: block !important;
    }
</style>

<script>
    $(document).ready(function(){
        $.each($('.nav-link'), function(key, value){
            if(location.href.split('/')[location.href.split('/').length - 1] === value.text.toLowerCase()){
                $(value).addClass('active');
            }else if(location.href.split('/')[location.href.split('/').length - 1] === 'profile'){
                (key === $('.nav-link').length - 1) ? $(value).addClass('active') : null;
            }else{
                $(value).removeClass('active');
            }
        });
    });
</script>